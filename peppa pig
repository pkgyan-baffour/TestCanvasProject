var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");
var my_gradient = ctx.createLinearGradient(2, 10, 10, 200);
my_gradient.addColorStop(1, "#66d9ff");
my_gradient.addColorStop(0, "#ffff99");
